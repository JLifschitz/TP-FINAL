@{
    ViewData["Title"] = "Detalle Artista";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>DetalleArtistas</title>
        <link rel="Stylesheet" src="site.css">
    </head>
    <body>
        <img src="@ViewBag.Artista.foto">
        <a href='@Url.Action("Login")'><button>Seguir</button></a>
        <h1>Nombre: @ViewBag.Artista.nombre</h1>
        <h1>Descripcion: @ViewBag.Artista.descripcion</h1>
        <br>  
        <h1>Comentarios:</h1>
        <div class="listado">
            @foreach (Comentario item in ViewBag.Comentarios)
            {
                <h1>@item.contenido</h1>
            }
        </div>
        <h1>Top canciones</h1>
        <div class="listado">
            @foreach (Cancion item in ViewBag.Cancion)
            {
                <h1>@item.nombre</h1>
                <h1>@item.fechaestreno</h1>
            }
        </div>  
    </body>
</html>
