@{
    ViewData["Title"] = "Registro";
}
<h1>¡Bienvenido, Registrate!</h1>
<form class="center" method="post" action='@Url.Action("Registro")'>
    <label for="UserName">Nombre de Usuario</label>
    <input type="text" name="UserName" placeholder="Usuario" required></input>

    <label for="Contraseña">Contraseña</label>
    <input type="password" value="" name="Contraseña" placeholder="Contraseña" id="password" onkeyup="ValidatePassword()" required></input>
    <span id="PasswordAlert" class="alert"></span>

    <label for="Mail">Mail</label>
    <input type="mail" value="" name="Mail" placeholder="Mail" required></input>
    
    <input type="submit" >
</form>