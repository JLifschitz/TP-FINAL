@{
    ViewData["Title"] = "Detalle Artista";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>DetalleArtistas</title>
        <link rel="Stylesheet" src="site.css">
    </head>
    <body>
        <div class="DetallesArtista">
            <img style="height: 25rem; width: 25rem;" src="/img/Artistas/@ViewBag.Artista.foto">
            <div class="detalles">
                <div class="datos">
                    <h1>Nombre: @ViewBag.artista.nombre</h1>
                    <h1>Descripcion: @ViewBag.artista.descripcion</h1> 
                </div>
                <h1>Top canciones</h1>
                <div class="canciones">
                    @foreach (Cancion item in ViewBag.Canciones)
                    {
                        <h1>@item.nombre</h1>
                        <h1>@item.fechaestreno</h1>
                    }
                </div>
            </div>
        </div>
        <input class="comentario" placeholder="AÃ±adir comentario">
        <br>  
        <h1>Comentarios:</h1>
        <div class="comentarios">
            @foreach (Comentario item in ViewBag.Comentarios)
            {
                <h1>@item.contenido</h1>
            }
        </div>
    </body>
</html>
