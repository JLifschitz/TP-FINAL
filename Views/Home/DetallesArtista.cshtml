@{
    ViewData["Title"] = "Detalle Artista";
}
<div class="DetallesArtista">

    <img style="height: 25rem; width: 25rem; margin-left:10rem;" src="@ViewBag.Artista.foto">
    <br>
    <button id="seguir" onclick="SeguirArtista(@ViewBag.artista.artistaId, @ViewBag.user.usuarioId)">Seguir</button>
    
    <div class="detalles">
        <div class="datos">
            <h1>Nombre: @ViewBag.artista.nombre</h1>
            <h1>Descripcion: @ViewBag.artista.descripcion</h1> 
        </div>
        @if(ViewBag.admin == true)
        {
            <a class="agregar" href='@Url.Action("AgregarCancion", new {artistaId = ViewBag.artista.artistaId})'><button>Agregar Cancion</button></a>
        }
        <div class="canciones">
        <h1>Top canciones:</h1>
            @foreach (Cancion item in ViewBag.Canciones)
            {
                <div class="cancion">
                    <h1>@item.nombre   @item.fechaestreno.ToString("yyyy-MM-dd")</h1>
                </div>
            }
        </div>
    </div>
    
</div>
<input class="comentario" placeholder="AÃ±adir comentario" name="contenido" id="cont">
<button onclick="ValidarComentario(@ViewBag.artista.artistaId, @ViewBag.user.usuarioId)">Subir</button>
<br>  
<h1>Comentarios:</h1>
<div class="comentarios">
    <div class="comNuevo" id="nuevo">
        <h1 id="name"></h1>
        <h1 id="contenido"></h1>
    </div>
    @foreach (Comentario item in ViewBag.Comentarios)
    {
        <h1>@item.nombre :  @item.contenido</h1>
    }
</div>
